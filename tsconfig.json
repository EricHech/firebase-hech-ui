{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
